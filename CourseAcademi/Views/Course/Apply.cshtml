@model Candidate

<div class="display-6">
    Apply
</div>

<form method="post" action="/course/apply">
    <div class="form-group my-3">
        <label >Email</label>
        <input type="text" name="Email" class="form-controller">
    </div>

    <div class="form-group my-3">
        <label>First Name</label>
        <input name="FirstName" class="form-controller">
    </div>
    

    <div class="form-group my-3">
        <label>Last Name</label>
        <input name="LastName" class="form-controller">
    </div>

    <div class="form-group my-3">
        <label>Age</label>
        <select name="Age" class="form-controller" >
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">24</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input type="radio" name="SelectedCourse" id="mvc" value="ASP.NET CORE MVC">
            <label>ASP.NET CORE MVC</label>
        </p>
        <p>
            <input type="radio" name="SelectedCourse" id="api" value="ASP.NET CORE API">
            <label>ASP.NET CORE API</label>
        </p>
        <p>
            <input type="radio" name="SelectedCourse" id="mvc" value="BLAZOR">
            <label>BLAZOR</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a href="/" class="btn btn-warning">Home</a>
    </div>
</form>