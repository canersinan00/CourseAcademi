@model Candidate

<div class="display-6">
    Applications
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    
    <div class="form-group my-3">
        <label asp-for="Email">E-Mail</label>
        <input type="text" asp-for="Email" class="form-controller">
    </div>

    <div class="form-group my-3">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-controller">
    </div>
    

    <div class="form-group my-3">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-controller">
    </div>

    <div class="form-group my-3">
        <label asp-for="Age">Age</label>
        <select asp-for="Age" class="form-controller" >
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">24</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input checked type="radio" asp-for="SelectedCourse" id="mvc" value="ASP.NET CORE MVC">
            <label>ASP.NET CORE MVC</label>
        </p>
        <p>
            <input type="radio" asp-for="SelectedCourse" id="api" value="ASP.NET CORE API">
            <label>ASP.NET CORE API</label>
        </p>
        <p>
            <input type="radio" asp-for="SelectedCourse" id="mvc" value="BLAZOR">
            <label>BLAZOR</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Home</a>
    </div>
</form>